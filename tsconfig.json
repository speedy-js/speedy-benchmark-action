{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": ["benchmarks", "node_modules/**", "__tests__"]
}
